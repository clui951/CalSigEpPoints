<header>
	<div class="header-content-new">
		<div class="header-content-new-inner">
			<h1>Submitted Tasks</h1>

			<p><%= link_to "Enter New Task", tasks_new_path %></p> <!-- Create a link that appears as "new" that leads to tasks_new_path -->
			<% @tasks.each do |u| %> <!-- Iterates through each name under the variable u -->
        <p>
			  Title: <%= link_to u.title, tasks_path(u) %> <br><!-- Show the name-->
			  Comment: <%= u.comment %> <br><!-- Show the rush guy's email -->
			  Value: <%= u.value %> 
        </p>
			<% end %>
			<hr>
			
		</div>
	</div>
</header>

		
